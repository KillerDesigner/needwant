<body onload="addText();">
  <p style="float:right;"><a href="javascript:closeBox('close');">Close</a></p>
	<div class="row">
	<div class="col-md-4 offset3"> 
	  <p><strong>Add item to Wantlist</strong></p>
		<%= form_for(:item, url: "/items") do |f| %>

			<%= f.hidden_field :wishlist_id, :value => @wishlist_id %>

			<%= f.hidden_field :url, :value => @url %>
 
			<%= f.text_field :image, :value => @image %>

		 	<%= f.label :title %>:
		 	<%= f.text_field :title, :placeholder => @title, :value => @title %><br />


			<%= f.label :category %>:
			<%= f.text_field :category %><br />

			<%= f.label :price %>:
			<%= f.text_field :price, :placeholder => @price, :value => @price %><br />

		 	<%= f.submit  "Do Want!", class: "btn btn-small btn-primary" %>
		<% end %>
	</div>
</div>
</body>